        <!-- SLIM JAR BUILDS -->
        <!-- Linux build: copy direct dependencies and pre-compiled native monetdbe-java library
            (can be enabled by using -Dbuild_type=slimjar; must set the -Dlib_folder property) -->
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>Linux</name>
                </os>
                <property>
                    <name>build_type</name>
                    <value>slimjar</value>
                </property>
            </activation>
            <properties>
                <build.type>linux-slim</build.type>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <!-- Copy libmonetdbe direct dependencies to lib folder -->
                            <execution>
                                <id>copy-direct-dependencies</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/lib/linux/direct/</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${lib_folder}/linux/direct</directory>
                                            <includes>
                                                <include>libstream.so.*</include>
                                                <include>libbat.so.*</include>
                                                <include>libmapi.so.*</include>
                                                <include>libmonetdb5.so.*</include>
                                                <include>libmonetdbsql.so.*</include>
                                                <include>libmonetdbe.so.*</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <!-- Copy MonetDBe-Java C library dependency -->
                            <execution>
                                <id>copy-native-lib</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/lib/linux/</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${lib_folder}/linux</directory>
                                            <includes>
                                                <include>libmonetdbe-java.so</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Enforce that lib_folder is set -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-enforcer-plugin</artifactId>
                        <version>1.4.1</version>
                        <executions>
                            <execution>
                                <id>enforce-property</id>
                                <goals>
                                    <goal>enforce</goal>
                                </goals>
                                <configuration>
                                    <rules>
                                        <requireProperty>
                                            <property>lib_folder</property>
                                            <message>You must set the lib_folder property, pointing to the directory where the direct/transitive libraries are.</message>
                                        </requireProperty>
                                    </rules>
                                    <fail>true</fail>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

