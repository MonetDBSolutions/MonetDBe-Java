<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.monetdb</groupId>
        <artifactId>monetdbe-java-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>monetdbe-java</artifactId>
    <packaging>jar</packaging>
    <name>${project.groupId}:${project.artifactId}</name>

    <profiles>
        <!-- Linux compilation -->
        <profile>
            <id>linux</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <!-- Copy JNI C library dependency to lib folder -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.monetdb</groupId>
                                            <artifactId>monetdbe-java-native</artifactId>
                                            <version>1.0-SNAPSHOT</version>
                                            <type>so</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                                            <destFileName>libmonetdbe-lowlevel.so</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <execution>
                                <id>copy-lib</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/lib/</outputDirectory>
                                    <!-- This should only include the necessary libraries -->
                                    <resources>
                                        <resource>
                                            <directory>${MonetDB_dir}/lib/</directory>
                                            <includes>
                                                <include>libstream.*</include>
                                                <include>libbat.*</include>
                                                <include>libmapi.*</include>
                                                <include>libmonetdb5.*</include>
                                                <include>libmonetdbsql.*</include>
                                                <include>libmonetdbe.*</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${MonetDB_dir}/lib64/</directory>
                                            <includes>
                                                <include>libstream.*</include>
                                                <include>libbat.*</include>
                                                <include>libmapi.*</include>
                                                <include>libmonetdb5.*</include>
                                                <include>libmonetdbsql.*</include>
                                                <include>libmonetdbe.*</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Mac compilation -->
        <profile>
            <id>mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <!-- Copy JNI C library dependency to lib folder -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.monetdb</groupId>
                                            <artifactId>monetdbe-java-native</artifactId>
                                            <version>1.0-SNAPSHOT</version>
                                            <type>dylib</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                                            <destFileName>libmonetdbe-lowlevel.dylib</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <execution>
                                <id>copy-lib</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/lib/</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${MonetDB_dir}/lib/</directory>
                                            <includes>
                                                <include>libstream.*</include>
                                                <include>libbat.*</include>
                                                <include>libmapi.*</include>
                                                <include>libmonetdb5.*</include>
                                                <include>libmonetdbsql.*</include>
                                                <include>libmonetdbe.*</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${MonetDB_dir}/lib64/</directory>
                                            <includes>
                                                <include>libstream.*</include>
                                                <include>libbat.*</include>
                                                <include>libmapi.*</include>
                                                <include>libmonetdb5.*</include>
                                                <include>libmonetdbsql.*</include>
                                                <include>libmonetdbe.*</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Windows compilation -->
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <!-- Copy JNI C library dependency to lib folder -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.monetdb</groupId>
                                            <artifactId>monetdbe-java-native</artifactId>
                                            <version>1.0-SNAPSHOT</version>
                                            <type>dll</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                                            <destFileName>libmonetdbe-lowlevel.dll</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Copy libmonetdbe library dependencies to lib folder -->
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <execution>
                                <id>copy-lib</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}\lib\</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${MonetDB_dir}\bin\</directory>
                                            <includes>
                                                <include>stream.dll</include>
                                                <include>bat.dll</include>
                                                <include>mapi.dll</include>
                                                <include>monetdb5.dll</include>
                                                <include>monetdbsql.dll</include>
                                                <include>monetdbe.dll</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${VCPKG_ROOT}\installed\x64-windows\bin\</directory>
                                            <includes>
                                                <include>libcrypto-1_1-x64.dll</include>
                                                <include>iconv-2.dll</include>
                                                <include>libxml2.dll</include>
                                                <include>pcre.dll</include>
                                                <include>zlib1.dll</include>
                                                <include>lzma.dll</include>
                                                <include>bz2.dll</include>
                                                <include>libcurl.dll</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <!-- Copy java.sql.Driver resource file for JDBC -->
                    <execution>
                        <id>copy-driver</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/META-INF/</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>7</source>
                    <target>7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>