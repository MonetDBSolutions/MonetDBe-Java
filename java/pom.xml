    <!-- TODO Maybe change the goal of maven-dependency-plugin from copy to copy-lib? It would allow us to mention the dependency before the profile section -->
    <profiles>
        <!-- DEV BUILDS -->
        <!-- Linux developer compilation: only copy pre-compiled native monetdbe-java library
             (default behaviour for Linux, changed by setting -Dbuild_type) -->
        <profile>
            <id>linux-dev</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>Linux</name>
                </os>
                <property>
                    <name>!build_type</name>
                </property>
            </activation>
            <properties>
                <os.name.clean>linux</os.name.clean>
                <os.library.type>so</os.library.type>
                <jar.classifier>linux</jar.classifier>
            </properties>
        </profile>

        <!-- Mac developer compilation: only copy pre-compiled native monetdbe-java library
             (default behaviour for Mac, changed by setting -Dbuild_type)  -->
        <profile>
            <id>mac-dev</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
                <property>
                    <name>!build_type</name>
                </property>
            </activation>
            <properties>
                <os.name.clean>mac</os.name.clean>
                <os.library.type>dylib</os.library.type>
                <jar.classifier>mac</jar.classifier>
            </properties>
        </profile>

        <!-- Windows developer compilation: only copy pre-compiled native monetdbe-java library
             (default behaviour for Windows, changed by setting -Dbuild_type)  -->
        <profile>
            <id>windows-dev</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
                <property>
                    <name>!build_type</name>
                </property>
            </activation>
            <properties>
                <os.name.clean>windows</os.name.clean>
                <os.library.type>dll</os.library.type>
                <jar.classifier>windows</jar.classifier>
            </properties>
        </profile>

        <!-- TODO Only copy the major versioned shared libraries (the exclude strategy didn't quite work) -->
        <!-- TODO Change their rpath (linux and mac) -->
        <!-- SLIM JAR BUILDS -->
        <!-- Linux build: copy direct dependencies and pre-compiled native monetdbe-java library
            (can be enabled by using -Dbuild_type=slimjar; must set the -DMonetDB_dir property) -->
        <profile>
            <id>linux-slim</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>Linux</name>
                </os>
                <property>
                    <name>build_type</name>
                    <value>slimjar</value>
                </property>
            </activation>
            <properties>
                <os.name.clean>linux</os.name.clean>
                <os.library.type>so</os.library.type>
                <jar.classifier>linux-slim</jar.classifier>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <!-- Copy libmonetdbe direct dependencies to lib folder -->
                            <execution>
                                <id>copy-direct-dependencies</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/lib/linux/direct/</outputDirectory>
                                    <resources>
                                        <resource>
                                            <!-- TODO Only lib64 (not lib)? -->
                                            <directory>${MonetDB_dir}/lib64/</directory>
                                            <includes>
                                                <include>libstream.so.*</include>
                                                <include>libbat.so.*</include>
                                                <include>libmapi.so.*</include>
                                                <include>libmonetdb5.so.*</include>
                                                <include>libmonetdbsql.so.*</include>
                                                <include>libmonetdbe.so.*</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Enforce that MonetDB_dir is set -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-enforcer-plugin</artifactId>
                        <version>1.4.1</version>
                        <executions>
                            <execution>
                                <id>enforce-property</id>
                                <goals>
                                    <goal>enforce</goal>
                                </goals>
                                <configuration>
                                    <rules>
                                        <requireProperty>
                                            <property>MonetDB_dir</property>
                                            <message>You must set the MonetDB_dir property, pointing to the MonetDB base directory (not the lib/lib64 directory)</message>
                                        </requireProperty>
                                    </rules>
                                    <fail>true</fail>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Mac build: copy direct dependencies and pre-compiled native monetdbe-java library
            (can be enabled by using -Dbuild_type=slimjar; must set the -Dlib_folder property) -->
        <profile>
            <id>mac-slim</id>
            <activation>
                <os>
                    <family>mac</family>
