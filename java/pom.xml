<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.monetdb</groupId>
        <artifactId>monetdbe-java</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>monetdbe-java-src</artifactId>
    <packaging>jar</packaging>
    <name>${project.groupId}:${project.artifactId}</name>

    <!-- TODO Add profiles for different OS and arch types. Changes the lib folder (lib vs lib64) and the packaging type of monetdbe-java-native -->
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <!-- Copy java.sql.Driver resource file for JDBC -->
                    <execution>
                        <id>copy-driver</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/META-INF/</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <!-- Copy libmonetdbe library dependencies to lib folder -->
                    <!-- TODO: Only copy the dependencies, not all libraries-->
                    <execution>
                        <id>copy-lib</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/lib/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${MonetDB_dir}/lib/</directory>
                                </resource>
                                <resource>
                                    <directory>${MonetDB_dir}/lib64/</directory>
                                </resource>
                                <!-- Dependency libraries (are these the only ones?)
                                <includes>
                                    <include>libmonetdbe.so</include>
                                    <include>libmonetdbsql.so</include>
                                    <include>libmonetdb5.so</include>
                                    <include>libmapi.so</include>
                                    <include>libbat.so</include>
                                    <include>libstream.so</include>
                                </includes>
                                -->
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Copy JNI C library dependency to lib folder -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.monetdb</groupId>
                                    <artifactId>monetdbe-java-native</artifactId>
                                    <version>1.0-SNAPSHOT</version>
                                    <type>dylib</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                                    <destFileName>libmonetdbe-lowlevel.dylib</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>